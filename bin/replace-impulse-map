#!/usr/bin/env bash

START_REGEX=';;; Impulse'
END_REGEX='^$'

impulse_map="$1"
shift

tmp_file="/tmp/tmp_replace_impulse_map"

for file in "$@"; do
    if grep "$START_REGEX" "$file" >/dev/null; then
        all_impulses=$( \
            grep -F "|$file|" "$impulse_map" \
            | awk '{print $1}'
        )

        awk -v impulses="$all_impulses" "
            /$START_REGEX/ { 
                in_impulse_map = 1
                print
                print impulses
                print
            }
            {
                if (in_impulse_map == 0) {
                    print
                }
            }
            /$END_REGEX/ {
                in_impulse_map = 0
            }
        " "$file" > "$tmp_file"
        [[ $? -eq 0 ]] && mv "$tmp_file" "$file"
    fi
done
