:import [Library]

;;; ---------------------------------------------------------------------------
;;; Declaration
:local int i

;;; ---------------------------------------------------------------------------
;;; Impulse
key.s()

;;; ---------------------------------------------------------------------------
;;; Conditions
isopen("museum")

;;; ---------------------------------------------------------------------------
;;; Actions

    fill(true)

LOOP_START:
    execute("Museum/_Buy")
    execute("Museum/_Combine")
    execute("Museum/_Combine")
    execute("Museum/_Combine")
    i = i + 1
    gotoif(LOOP_START, i < 22)


