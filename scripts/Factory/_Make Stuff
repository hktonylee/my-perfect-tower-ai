;;; ---------------------------------------------------------------------------
;;; Declarations
:global int _1
:local int i

;;; ---------------------------------------------------------------------------
;;; Impulse
key.5()

;;; ---------------------------------------------------------------------------
;;; Conditions
isopen("factory")

;;; ---------------------------------------------------------------------------
;;; Actions
    i = 0
LOOP_START:
    ; Randomly pick one of the Tier 1~5
    _1 = int.rnd(1, 8)

    executesync("Factory/_Make 1 Dust")
    executesync("Factory/_Make 1 Plate")
    i = i + 1
    gotoif(LOOP_START, i < 5)
