;;; Number parsing
#switch.1(type, else, \
    cond1, value1 \
) ternary.{type}(({cond1}), {value1}, {else})

#switch.2(type, else, \
    cond1, value1, \
    cond2, value2 \
) {switch.1({type}, \
    {switch.1({type}, ({else}), \
        ({cond1}), ({value1}) \
    )}, \
    ({cond2}), ({value2}) \
)}

#switch.3(type, else, \
    cond1, value1, \
    cond2, value2, \
    cond3, value3 \
) {switch.1({type}, \
    {switch.2({type}, ({else}), \
        ({cond1}), ({value1}), \
        ({cond2}), ({value2}) \
    )}, \
    ({cond3}), ({value3}) \
)}

#switch.4(type, else, \
    cond1, value1, \
