:import [Library]

;;; ---------------------------------------------------------------------------
;;; Declarations
:global int region
:global int difficulty
:local int i

;;; ---------------------------------------------------------------------------
;;; Macros
#kIdleRegion 7

; 0: Easy, 1: Medium, and so on
#kIdleDifficulty 3

;;; ---------------------------------------------------------------------------
;;; Impulse
key.n()

;;; ---------------------------------------------------------------------------
;;; Actions
    show("towertesting", true)

    region = {kIdleRegion}
    difficulty = {kIdleDifficulty}
    executesync("Tower/_Select Idle Level")
    gu("region")
    gu("difficulty")

    {relclick(0.15, 0.07)} ; "Launch" button

    gds({lastTime("Tower")}, round(gdg("time")))

    wait(60.0)
    {relclick(0.5, 0.2)} ; "Stop" button
    
    show("towertesting", false)
    
