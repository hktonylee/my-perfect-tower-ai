;;; ---------------------------------------------------------------------------
;;; Declarations
:global int _1
:local int i
:local int start

;;; ---------------------------------------------------------------------------
;;; Impulse
key.5()

;;; ---------------------------------------------------------------------------
;;; Conditions
isopen("factory")

;;; ---------------------------------------------------------------------------
;;; Macros
#MakeMaxTier 8

;;; ---------------------------------------------------------------------------
;;; Actions
    start = int.rnd(1, {MakeMaxTier})
    i = start
LOOP_START:
    _1 = i

    executesync("Factory/_Make 1 Dust")
    executesync("Factory/_Make 1 Plate")

    ; Make from the highest tier, to prevent "starvation"
    i = (i - 2 + {MakeMaxTier}) % {MakeMaxTier} + 1
    gotoif(LOOP_START, i != start)

    gu("_1")
